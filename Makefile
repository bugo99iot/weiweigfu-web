###############################################################################
# HELP / DEFAULT COMMAND
###############################################################################
.PHONY: help
help:
	@awk 'BEGIN {FS = ":.*?## "} /^[0-9a-zA-Z_-]+:.*?## / {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

##########################################################################
# ALL COMMANDS
##########################################################################

.PHONY: start-app-local
start-app-local: ## Start app locally
	. venv/bin/activate && cd app && python app.py
